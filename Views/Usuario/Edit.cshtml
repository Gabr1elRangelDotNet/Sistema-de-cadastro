@model Usuario
@{
    ViewData["Title"] = "Editar contato";
}

<div class="text-center">
    <h2 class="display-4">Editar Contato</h2>
</div>

<form asp-controller="Usuario" asp-action="Alterar" method="post">

    <input type="hidden" asp-for="Id" />
    <!-- Nome input -->
    <div class="form-outline mb-4">
        <label class="form-label" for="Nome">Nome</label>
        <input type="text" id="form2Example2" asp-for="Nome" class="form-control" />
        @Html.ValidationMessageFor(x => x.Nome)
    </div>
    <!-- Celular input -->
    <div class="form-outline mb-4">
        <label class="form-label" for="Celular">Celular</label>
        <input type="text" id="form2Example3" asp-for="Celular" class="form-control" />
        @Html.ValidationMessageFor(x => x.Celular)
    </div>
    <!-- Email input -->
    <div class="form-outline mb-4">
        <label class="form-label" for="Email">Email</label>
        <input type="text" id="form2Example3" asp-for="Email" class="form-control" />
        @Html.ValidationMessageFor(x => x.Email)
    </div>

    <!-- Submit button -->
    <button type="submit" class="btn btn-primary btn-block">Editar</button>
    <a class="btn btn-secondary btn-block" asp-controller="Usuario" asp-action="Index" role="button">Voltar</a>

</form>