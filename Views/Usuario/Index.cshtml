@model List<Usuario>
@{
    ViewData["Title"] = "Usuario Page";
}
<div class="text-center">

    <div class="btn-group">
        <a role="button" class="btn btn-primary" asp-controller="Usuario" asp-action="Create">Adicionar contatos</a>
    </div>
    <br />

    @if(TempData["MensagemSucesso"] != null)
    {
        <div class="alert alert-success" role="alert">
            <button type="button" class="btn btn-danger btn-sm close-alert" arial-label="Close">X</button>
            @TempData["MensagemSucesso"]
        </div>
    }
    

    @if(TempData["MensagemErro"] != null)
    {
        <div class="alert alert-danger" role="alert">
            <button type="button" class="btn btn-danger btn-sm close-alert" arial-label="Close">X</button>
            @TempData["MensagemErro"]
        </div>
    }
    <br />

    <h1 class="display-4"> Contatos</h1>

    <table class="table">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Name</th>
                <th scope="col">E-mail</th>
                <th scope="col">Celular
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Any())
            {
                foreach (Usuario usuario in Model)
                {
                    Console.WriteLine($"ID: {usuario.@Id}, Nome: {usuario.@Nome}, E-mail: {usuario.@Email}, Celular: {usuario.@Celular}");
                    <tr>
                        <!-- Restante do seu código para exibir na View -->
                    </tr>
                }
            }
            else
            {
                Console.WriteLine("NÃO ENCONTRADO");
            }
            @if (Model != null && Model.Any())
            {
                foreach (Usuario usuario in Model)
                {
                    
                    <tr>
                        <th scope="row">@usuario.Id</th>
                        <td>@usuario.Nome</td>
                        <td>@usuario.Email</td>
                        <td>@usuario.Celular</td>
                        <td>
                            <div class="btn-group" role="group">
                                <a role="button" class="btn btn-primary" asp-route-id="@usuario.Id" asp-controller="Usuario" asp-action="Edit">Editar</a>
                                <a role="button" class="btn btn-danger" asp-route-id="@usuario.Id" asp-controller="Usuario" asp-action="Delete">Apagar</a>
                            </div>
                        </td>
                    </tr>
                }
            }
            else
            {
                Console.WriteLine("NÃO ENCONTRADO");
            }

        </tbody>
    </table>
</div>