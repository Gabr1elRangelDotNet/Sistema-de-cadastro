@model Usuario
@{
    ViewData["Title"] = "Delete cantato";
}
<div class="text-center">
    <h2>Deseja apagar o usuário (@Model.Nome)?</h2>
</div>

<a role="button" class="btn btn-primary" asp-controller="Usuario" asp-action="Index">Cancelar exclusão</a>
<a role="button" class="btn btn-danger" asp-controller="Usuario" asp-action="DeleteConfirmation" asp-route-id="@Model.Id">Confirmar exclusão</a>

